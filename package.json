{
    "name": "app-backend",
    "version": "0.1.0",
    "description": "The backend API for the Coding Garden community app.",
    "main": "src/index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=production node src/index.js",
        "dev": "cross-env NODE_ENV=development nodemon src/index.js",
        "lint": "eslint src/**/*.js",
        "now:deploy": "now --token=$NOW_TOKEN alias set $(now --token=$NOW_TOKEN deploy -e MONGO_SECRET=$MONGO_SECRET) $NOW_ALIAS"
    },
    "repository": "https://github.com/CodingGardenCommunity/app-backend.git",
    "author": "Coding Garden Community App",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "yarn run lint"
        }
    },
    "dependencies": {
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "mongoose": "^5.4.17",
        "node-fetch": "^2.3.0"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "cross-env": "^5.2.0",
        "eslint": "^5.14.1",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-react": "^7.12.4",
        "husky": "^1.3.1",
        "nodemon": "^1.18.10",
        "now": "^14.1.0"
    }
}
